{% extends 'layout.html.twig' %}
{% set pagination %}
<nav class="pagination">
  <a class="start" href="">Debut</a>
  <a class="before" href=""><</a>
  <span class="actual">1</span>
  <a class="after" href="">></a>
</nav>
{% endset %}
{% block title %}BDD{% endblock %}
{% block link %}
  {{parent()}}
  {{encore_entry_link_tags('bddCss')}}

{% endblock %}
{% block content %}
  {{nbrPage}}
  <section>
    <h2>Tableaux</h2>

    <form id="rechercheBar" action="./BddController.php" method="post">
      <label for="recherche">Rechercher un produit:
      </label>
      <input type="text" name="recherche" value="" required="required">
      <input type="submit" name="submitRecherche" value="Enter">
    </form>
    {% if allProduct %}
      {{pagination}}
      <table>
        <th>Nom du produit</th>
        <th>Nom du fourniseur</th>
        <th>Echelle</th>
        <th>Description</th>
        <th>Nombre en stock</th>
        <th>Prix</th>
        <tbody>
          {% for key, value in allProduct %}
            <tr>
              {% for key2, value2 in value %}
                <td>{{value2}}</td>
              {% endfor %}
            </tr>
          </tbody>
        {% endfor %}
      </table>
    {{pagination}}
    {% else %}
      <p>Pas de produit trouvé</p>
    {% endif %}
    <section>
    <h2>Informations suplémentaires</h2>
    <table>
      <thead>
        <th>Nombre de produit en vente</th>
        <th>Prix moyen</th>
      </thead>
    <tbody>
      <tr>
      {% for key, value in info %}
        <td>{{value}}</td>
        {% endfor %}
    </tr>
    </tbody>

    </table>
    </section>
    <section>
      Explication
    </section>
  {% endblock %}
