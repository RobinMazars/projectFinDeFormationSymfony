{% extends 'layout.html.twig' %}
{% set previousPage = pages['previousPage'] %}
{% set nextPage = pages['nextPage'] %}
{% set pagination %}
<nav class="pagination">
  <a class="start" href="{{path(namePath,  {'actualPage':1})}}">Debut</a>
  <a class="before" href="{{path(namePath,  {'actualPage':previousPage})}}"><</a>
  <span class="actual">{{pages['actualPage']}}</span>
  <a class="after" href="{{path(namePath,  {'actualPage':nextPage})}}">></a>
</nav>
{% endset %}
{% block title %}BDD{% endblock %}
{% block link %}
  {{parent()}}
  {{encore_entry_link_tags('bddCss')}}
{% endblock %}
{% block content %}
  {% if recherche is defined %}
    {{recherche}}
  {% endif %}

  <section>
    <h2>Tableaux</h2>
    <form id="rechercheBar" action="{{path('search',  {'actualPage':1})}}" method="get">
      <label for="recherche">Rechercher un produit:
      </label>
      {% if recherche is defined %}
      <input type="text" name="recherche" value="{{recherche}}" autofocus onfocus="this.setSelectionRange(this.value.length,this.value.length);" required="required">
      {% else %}
        <input type="text" name="recherche" value="" autofocus required="required">
      {% endif %}


      <input type="submit"  value="Enter">
    </form>
    {% if allProduct %}
    {% if recherche is defined %}
    {% else %}
      {{pagination}}
    {% endif %}
      <table>
        <th>Nom du produit</th>
        <th>Nom du fourniseur</th>
        <th>Echelle</th>
        <th>Description</th>
        <th>Nombre en stock</th>
        <th>Prix</th>
        <tbody>
          {% for key, value in allProduct %}
            <tr>
              {% for key2, value2 in value %}
                <td>{{value2}}</td>
              {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
      </table>
    {% else %}
      <p>Pas de produit trouvé</p>
    {% endif %}
    {% if recherche is defined %}
    {% else %}
      {{pagination}}
    {% endif %}
    {% if info is defined %}
      <section>
        <h2>Informations suplémentaires</h2>
        <table>
          <thead>
            <th>Nombre de produit en vente</th>
            <th>Prix moyen</th>
          </thead>
          <tbody>
            <tr>
              {% for key, value in info %}
                <td>{{value}}</td>
              {% endfor %}
            </tr>
          </tbody>
        </table>
      </section>
    {% endif %}
    <section>
      Explication
    </section>
  {% endblock %}
{% block bottomLink %}
{{parent()}}
{% endblock %}
